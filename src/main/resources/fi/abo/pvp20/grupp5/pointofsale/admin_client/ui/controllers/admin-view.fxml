                    <content>
                        <fx:include source="products-tab.fxml" />
                    </content>
                </Tab>

                <Tab closable="false" text="Special offers">
                    <content>
                        <fx:include source="special-offers-tab.fxml" />
                    </content>
                </Tab>
                <Tab closable="false" text="Sales figures">
                    <content>
                        <fx:include source="sales-figures-tab.fxml" />
                    </content>
                </Tab>
                <Tab closable="false" text="Customers">
                    <content>
                        <fx:include source="customers-tab.fxml" />
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </children>
</VBox>
